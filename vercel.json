{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "kobana-mcp",
  "builds": [
    {
      "src": "vercel-mcp/dist/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel-mcp/dist/server.js"
    }
  ],
  "env": {
    "KOBANA_API_URL": "https://api.kobana.com.br"
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "vercel-mcp/dist",
  "framework": null
}
